        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>
    
    <style name="NewsDetailsAuteur" parent="@style/SofootTexte">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="NewsListItemTitle" parent="@style/SofootTitre">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LigueListItemTitle" parent="@style/SofootTitre">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="LigueTitle" parent="@style/SofootTitre">
    </style>
    
    <style name="NewsDescription" parent="@style/SofootTexte">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NewsListItemDescription" parent="@style/NewsDescription"></style>

