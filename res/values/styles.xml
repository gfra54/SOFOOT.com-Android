    <style name="ClassementClub" parent="@style/SofootTitre">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000</item>
    </style>
    
    <style name="ClassementChiffre" parent="@style/SofootTexte">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000</item>
    </style>
    
    <style name="ClassementHeader" parent="@style/ClassementChiffre">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TabIndicatorTexte">
        <item name="android:textColor">#efefef</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>