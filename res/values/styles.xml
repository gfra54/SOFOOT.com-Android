<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@android:Theme.Light.NoTitleBar"></style>

    <style name="SofootTitre">
        <item name="android:textColor">#ff2f00</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="SofootLegende">
        <item name="android:textColor">#8b8b8b</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <style name="SofootTexte">
        <item name="android:textColor">#4c4c4c</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NewsDetailsTitre" parent="@style/SofootTitre">
        <item name="android:textSize">24sp</item>
        <item name="android:background">#f6f6f6</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>
    
    <style name="NewsDetailsSurtitre" parent="@style/SofootTitre">
