<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="AppTheme" parent="@style/Theme.Sherlock.Light">
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="actionButtonStyle">@style/Widget.Styled.ActionButton</item>
    </style>
    
    <style name="Widget.Styled.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid">
        <item name="background">#eee</item>
        <item name="android:background">#eee</item>
        <item name="titleTextStyle">@style/TextAppearance.Styled.ActionBar.Title</item>
    </style>
    
    <style name="Widget.Styled.ActionButton" parent="Widget.Sherlock.Light.ActionButton">
        <item name="android:background">@drawable/bg_actionbar_item</item>
        <item name="background">#000</item>
    </style>
    
    <style name="TextAppearance.Styled.ActionBar.Title" parent="TextAppearance.Sherlock.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">#575757</item>
    </style>
    
    <style name="HeaderUpdatedTime">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SofootTitre">
        <item name="android:textColor">#ff2f00</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>
    
    <style name="SofootLegende">
        <item name="android:textColor">#8b8b8b</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <style name="SofootTexte">
        <item name="android:textColor">#575757</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NewsDetailsTitre" parent="@style/SofootTitre">
        <item name="android:background">#f6f6f6</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>
    
    <style name="NewsDetailsSurtitre" parent="@style/SofootTitre">
        <item name="android:textSize">10sp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>
    
    <style name="NewsDetailsDatePublication" parent="@style/SofootTexte">
        <item name="android:background">#f6f6f6</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="NewsDetailsLegende" parent="@style/SofootLegende">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>
    
    <style name="NewsDetailsTexte" parent="@style/SofootTexte">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>
    
    <style name="NewsDetailsChapo" parent="@style/SofootTexte">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>
    
    <style name="NewsDetailsAuteur" parent="@style/SofootTexte">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="NewsListItemTitle" parent="@style/SofootTitre">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LigueListItemTitle" parent="@style/SofootTitre">
    </style>

    <style name="LigueTitle" parent="@style/SofootTitre">
        <item name="android:background">@drawable/bg_ligue_title</item>
    </style>
    
    <style name="NewsDescription" parent="@style/SofootTexte">
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="NewsListItemDescription" parent="@style/NewsDescription"></style>
    
    <style name="ResultatListItemClubName" parent="@style/SofootTitre">
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="ResultatListItemInfoHeure" parent="@style/SofootTexte">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
    </style>
    
    <style name="ResultatListItemInfoDate" parent="@style/ResultatListItemInfoHeure">
        <item name="android:textSize">8sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="ResultatListItemInfoScore" parent="@style/ResultatListItemInfoHeure">
    </style>
    
    <style name="ClassementRang" parent="@style/SofootTitre">
