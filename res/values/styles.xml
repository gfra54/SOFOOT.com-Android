<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <color name="sofootTitle">#ff2f00</color>
    <color name="sofootTexte">#575757</color>
    <color name="commentaireBackgroundOdd">#ccc</color>
    <color name="commentaireBackgroundEven">#fff</color>
    <color name="commentaireBackgroundSpecial">#eff7ff</color>
    <color name="commentaireBorderSpecial">#AED9FF</color>
    <color name="coteCodePromo">#00ff00</color>
    <color name="coteBackground">#ff2f00</color>

    <color name="titleBackground">#f2f2f2</color>

    <color name="btnPrimaryColor">#ff2f00</color>
    <color name="btnPrimaryColorPressed">#ff4f27</color>

    <color name="btnSecondaryColor">#246fb4</color>
    <color name="btnSecondaryColorPressed">#2b83d5</color>

    <color name="btnTertiaryColor">#7a7a7a</color>
    <color name="btnTertiaryColorPressed">#8e8e8e</color>


    <dimen name="grid_unit">5dp</dimen>
    <dimen name="tinyText">8dp</dimen>
    <dimen name="miniText">10dp</dimen>
    <dimen name="smallText">12dp</dimen>
    <dimen name="normalText">14dp</dimen>
    <dimen name="bigText">18dp</dimen>
    <dimen name="title">22dp</dimen>
    <dimen name="logoSize">30dp</dimen>
    <dimen name="thumbnailWidth">90dp</dimen>
    <dimen name="thumbnailHeight">60dp</dimen>

    <style
        name="AppTheme"
        parent="@style/Theme.Sherlock.Light"
    >
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <!-- <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item> -->
        <item name="actionButtonStyle">@style/Widget.Styled.ActionButton</item>
    </style>

    <style
        name="Widget.Styled.ActionBar"
        parent="Widget.Sherlock.Light.ActionBar.Solid"
    >
        <item name="background">#eee</item>
        <item name="android:background">#eee</item>
        <item name="titleTextStyle">@style/TextAppearance.Styled.ActionBar.Title</item>
    </style>

    <style
        name="Widget.Styled.ActionButton"
        parent="Widget.Sherlock.Light.ActionButton"
    >
        <item name="android:background">@drawable/bg_actionbar_item</item>
        <item name="background">#000</item>
    </style>

    <style
        name="TextAppearance.Styled.ActionBar.Title"
        parent="TextAppearance.Sherlock.Widget.ActionBar.Title.Inverse"
    >
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/sofootTexte</item>
    </style>

    <style name="HeaderUpdatedTime">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SofootTitre">
        <item name="android:textColor">@color/sofootTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title</item>
    </style>

    <style name="SofootLegende">
        <item name="android:textColor">#8b8b8b</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/miniText</item>
    </style>

    <style name="SofootTexte">
        <item name="android:textColor">@color/sofootTexte</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:textColorLink">@color/sofootTitle</item>
    </style>

    <style
        name="NewsListItemTitle"
        parent="@style/SofootTitre"
    >
        <item name="android:textSize">@dimen/normalText</item>
    </style>

    <style
        name="NewsListItemDescription"
        parent="@style/SofootTexte"
    >
        <item name="android:textSize">@dimen/smallText</item>
    </style>

    <!-- News Details -->
    <style
        name="NewsDetailsSurtitre"
        parent="@style/SofootTitre"
    >
        <item name="android:textSize">@dimen/miniText</item>
    </style>

    <style
        name="NewsDetailsChapo"
        parent="@style/SofootTexte"
    >
        <item name="android:textStyle">bold</item>
    </style>

    <style
        name="NewsDetailsDatePublication"
        parent="@style/SofootTexte"
    >
        <item name="android:textStyle">bold</item>
    </style>

    <style
        name="NewsDetailsNbComms"
        parent="@style/SofootTitre"
    >
        <item name="android:textSize">@dimen/normalText</item>
    </style>

    <style
        name="NewsDetailsAuteur"
        parent="@style/SofootTexte"
    >
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Commentaires -->

    <style
        name="CommentaireInfo"
        parent="@style/SofootTexte"
    >
        <item name="android:background">@drawable/accent_bottom_border</item>
        <item name="android:textSize">@dimen/smallText</item>
    </style>

    <style
        name="CommentaireTexte"
        parent="@style/SofootTexte"
    >
        <item name="android:paddingTop">@dimen/grid_unit</item>
    </style>

    <!-- Ligue -->
    <style
        name="LigueTitle"
        parent="@style/SofootTitre"
    >
        <item name="android:background">@drawable/bg_ligue_title</item>
    </style>

    <style name="LigueHeader">
        <item name="android:background">@drawable/bg_ligue_title</item>
    </style>


    <!-- Live Scoring -->

    <style
        name="LiveScoringLabel"
        parent="@style/SofootTexte"
    >
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:paddingTop">@dimen/grid_unit</item>
        <item name="android:paddingBottom">@dimen/grid_unit</item>
    </style>

    <style
        name="LiveScoringInfoBig"
        parent="@style/SofootTexte"
    >
        <item name="android:textStyle">bold</item>
    </style>

    <style
        name="LiveScoringInfoSmall"
        parent="@style/SofootTexte"
    >
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/miniText</item>
    </style>

    <style
        name="LiveScoringClubName"
        parent="@style/SofootTitre"
    >
        <item name="android:textSize">@dimen/normalText</item>
    </style>

    <style
        name="LiveScoringGoalTime"
        parent="@style/SofootTexte"
    >
        <item name="android:textSize">@dimen/smallText</item>
        <item name="android:textColor">@color/sofootTitle</item>
    </style>

    <style
        name="LiveScoringGoalPlayer"
        parent="@style/SofootTexte"
    >
        <item name="android:textSize">@dimen/smallText</item>
    </style>


    <!-- Classement -->
    <style
        name="ClassementRang"
        parent="@style/SofootTitre"
    >
        <item name="android:textSize">@dimen/normalText</item>
    </style>

    <style
        name="ClassementClub"
        parent="@style/SofootTitre"
    >
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:textColor">#000</item>
    </style>

    <style
        name="ClassementChiffre"
        parent="@style/SofootTexte"
    >
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:textColor">#000</item>
    </style>

    <style
        name="ClassementHeader"
        parent="@style/ClassementChiffre"
    >
        <item name="android:textSize">@dimen/smallText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabIndicatorTexte">
        <item name="android:textColor">#efefef</item>
        <item name="android:textSize">@dimen/smallText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Bloc Sofoot -->

    <style name="BlocSofootTitle">
        <item name="android:background">@color/sofootTitle</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:padding">@dimen/grid_unit</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style
        name="BlocSofootTexte"
        parent="@style/SofootTexte"
    >
        <item name="android:textSize">@dimen/miniText</item>
        <item name="android:paddingLeft">@dimen/grid_unit</item>
        <item name="android:paddingRight">@dimen/grid_unit</item>
    </style>


    <!-- Boutons SOFOOT -->
    <style name="SofootButton">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <style
        name="Widget.Sofoot.Light.PrimaryButton"
        parent="@style/SofootButton"
    >
        <item name="android:background">@drawable/btn_primary</item>
    </style>

    <style
        name="Widget.Sofoot.Light.SecondaryButton"
        parent="@style/SofootButton"
    >
        <item name="android:background">@drawable/btn_secondary</item>
    </style>

    <style
        name="Widget.Sofoot.Light.TertiaryButton"
        parent="@style/SofootButton"
    >
        <item name="android:background">@drawable/btn_tertiary</item>
    </style>


    <!-- Cote -->

    <style name="CoteBandeau">
        <item name="android:background">#ff2f00</item>
        <item name="android:padding">@dimen/grid_unit</item>
    </style>

    <style name="CoteDefaultText">
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/normalText</item>

    </style>

    <style
        name="CoteText"
        parent="@style/CoteDefaultText"
    >
        <item name="android:textStyle">bold</item>
    </style>

    <style
        name="CoteCodePromoText"
        parent="@style/CoteDefaultText"
    >
        <item name="android:textSize">@dimen/smallText</item>
    </style>

    <style
        name="CoteCodePromo"
        parent="@style/CoteDefaultText"
    >
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/coteCodePromo</item>

    </style>

    <style
        name="CoteDisclaimer"
        parent="@style/CoteDefaultText"
    >
        <item name="android:textSize">9dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CoteContainer">
        <item name="android:padding">2dp</item>
        <item name="android:background">@color/coteBackground</item>
    </style>

    <style
        name="CoteLink"
        parent="@style/CoteDefaultText"
    >
        <item name="android:background">@color/coteBackground</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Cote1N2">
        <item name="android:background">@drawable/bg_cote_1n2</item>
        <item name="android:textColor">@color/sofootTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/bigText</item>
    </style>

    <style
        name="CoteNumber"
        parent="@style/CoteText"
    >
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/bigText</item>
        <item name="android:paddingRight">@dimen/grid_unit</item>
    </style>


    <!-- Menu List -->
    <style
        name="MenuListItem"
        parent="@style/SofootTitre"
    >
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/bg_list_item</item>
    </style>
</resources>