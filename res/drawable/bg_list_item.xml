<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <padding
                        android:bottom="@dimen/grid_unit"
                        android:left="@dimen/grid_unit"
                        android:right="@dimen/grid_unit"
                        android:top="@dimen/grid_unit" />

                    <solid android:color="#FFF"/>
                </shape>
            </item>
        </layer-list>
    </item>
    
    <item>
        <layer-list>
            <item>
                <shape>
                    <padding
                        android:bottom="@dimen/grid_unit"
                        android:left="@dimen/grid_unit"
                        android:right="@dimen/grid_unit"
                        android:top="@dimen/grid_unit" />

                    <gradient
                        android:angle="90"
                        android:endColor="#FFF"
                        android:startColor="#e9e9e9" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
